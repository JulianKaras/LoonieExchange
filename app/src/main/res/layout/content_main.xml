<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:background="@drawable/can_usa_flag_backdrop"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.barkerville.loonieexchange.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainActivityHeading"
        android:id="@+id/mainHeading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textColor="#000000"
        android:background="@drawable/border_style"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/revUsdTextView"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="@string/cadTextView"
        android:background="@drawable/border_style"
        android:layout_below="@+id/mainHeading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/revUsdEditText"
        android:background="@drawable/border_style"
        android:layout_alignStart="@id/revUsdTextView"
        android:layout_alignLeft="@id/revUsdTextView"
        android:layout_alignTop="@+id/revUsdTextView"
        android:layout_marginLeft="220dp"
        android:textAlignment="center"
        android:gravity="center"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/revExchangeTextView"
        android:textColor="#000000"
        android:text="@string/exchangeTextView"
        android:background="@drawable/border_style"
        android:layout_above="@+id/revExchangeEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/revExchangeEditText"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/border_style"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/newActivityButton"
        android:layout_alignStart="@+id/newActivityButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/revCadTextView"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/revExchangeEditText"
        android:layout_centerHorizontal="true"
        android:text="@string/usdTextView"
        android:background="@drawable/border_style"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/revCadEditText"
        android:layout_below="@+id/revCadTextView"
        android:layout_centerHorizontal="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/border_style"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonUsdToCad"
        android:id="@+id/newActivityButton"
        android:layout_below="@+id/revCadEditText"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
