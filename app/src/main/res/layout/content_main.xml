<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.barkerville.loonieexchange.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@android:color/background_light">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter CAD amount"
        android:id="@+id/cadTextView"
        android:layout_marginTop="58dp"
        android:textSize="20dp"
        android:background="#0000ffff"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/cadEditText"
        android:layout_alignTop="@+id/cadTextView"
        android:layout_toRightOf="@+id/cadTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current exchange rate"
        android:textSize="20dp"
        android:id="@+id/exchangeTextView"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/cadEditText"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/exchangeEditText"
        android:layout_below="@+id/exchangeTextView"
        android:layout_marginLeft="90dp"
        android:layout_alignRight="@id/exchangeTextView"
        android:layout_alignEnd="@+id/exchangeTextView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount in USD"
        android:id="@+id/usdTextView"
        android:layout_below="@+id/exchangeEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usdEditText"
        android:layout_below="@+id/usdTextView"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@id/usdTextView"
        android:layout_alignLeft="@id/usdTextView"/>
</RelativeLayout>
